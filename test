.hamburger-inner::before { content:""; top:-8px; }
.hamburger-inner::after  { content:""; top:8px; }

/* open state (animated X) */
.hamburger.open .hamburger-inner { background:transparent; }
.hamburger.open .hamburger-inner::before {
    transform: translateY(8px) rotate(45deg);
}
.hamburger.open .hamburger-inner::after {
    transform: translateY(-8px) rotate(-45deg);
}

/* mobile menu: hide #links by default and show as stacked panel when .open */
@media (max-width: 900px){
    /* ensure hidden by default on mobile, only visible when .open */
    /* use !important so desktop vs mobile cascade cannot accidentally show it */
    #links { display: none !important; }

     /* show hamburger on small screens */
     .hamburger { display:inline-block; position:absolute; right:18px; top:18px; }

     /* collapse header links into a hidden panel */
     /* half-screen overlay from top (50% height) */
     #links {
         position: fixed;
         top: 0;
         left: 0;
         right: 0;
         height: 50vh; /* half the viewport height */
         display: none !important;
         background: rgba(0,0,0,0.85); /* black 85% */
         padding-top: 64px; /* provide space for the X and push content down */
         padding-bottom: 24px;
         border-radius: 0;
         flex-direction: column;
         align-items: center;
         justify-content: flex-start; /* start from top so items appear under X */
         gap: 18px;
         /* overlay should sit above content but below header/loading */
         z-index: 10000;
         box-shadow: 0 10px 30px rgba(0,0,0,0.4);
         overflow-y: auto;
     }
 
     /* visible state */
     /* explicit visible state when JS adds .open */
     #links.open { display:flex !important; }
 
    /* when the hamburger is open, pin it to the top-right corner with small margins */
    .hamburger.open {
        position: fixed;
        top: 12px;
        right: 12px;
        z-index: 10011; /* above overlay so X remains visible */
    }
 
     /* stack links vertically in mobile panel */
    #links a {
        display:block;
        margin:8px 0;
        padding:8px 12px;
        width:100%;
        text-align:center;
        opacity: 0;
        transform: translateY(8px);
        transition: transform .28s ease, opacity .28s ease;
        /* ensure links sit above the panel background and are readable */
        z-index: 1060;
    }
 
     /* shown state applied by JS per item (staggered) */
     #links a.show {
         opacity: 1;
         transform: translateY(0);
     }
 
     /* make sure the panel is on top of everything */
     #links { z-index: 9999; }
 
     /* keep desktop small-screen tweaks */
     #header { padding:10% 3%; } /* slightly increase top padding to avoid overlap */
 }
 
